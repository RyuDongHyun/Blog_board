<div class="container">
    
    <div class="jumbotron p-5 p-md-5 text-white rounded bg-dark">
      <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic"><%= @blog.title%></h1>
        <p class="lead my-3"><%= @blog.content.html_safe%></p>
        <%= link_to 'Continue reading...', @blog, class: "text-white font-weight-bold" %>
        
      </div>
    </div>

    <div class="row mb-2">
      <% @blogs.reverse.each do |blog| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-0">
              <a class="text-dark" href="#"><%= blog.title%></a>
            </h3>
            <div class="mb-1 text-muted"><%= blog.created_at.strftime("%b %d, %Y")%></div>
            <p class="card-text mb-auto"><%= strip_tags(blog.content)%></p>
            <%= link_to 'Continue reading', blog %>
          </div>
          <img class="card-img-right flex-auto d-none d-lg-block w-50" src="<%= blog.image%>" alt="Card image cap">
        </div>
      </div>
      <% end %>
    </div>

  </div>
<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.reverse.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><img src="<%= blog.image %>", height="100", width="100"/></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
